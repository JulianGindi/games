pico-8 cartridge // http://www.pico-8.com
version 18
__lua__

CURRENT_MAP=0

function _init()
    startx=10
    starty=10
    char_spr=16

    -- player object
    player={}

    -- player position
    player.x=startx
    player.y=starty
    player.speed=8

    -- player inventory
    player.inventory={}
    player.money=1000 -- starting jeff out with 100 buckaroos
end

function _update()
    move_character()
    is_on_beach()
end

function _draw()
    cls()
    map(0,0,0,0)
    draw_character()
    draw_ui()
end

function draw_ui()
    print("$", 103, 0, 11)
    print(player.money, 108, 0, 11)
    print("m", 124, 0, 11)
end

function draw_character()
    spr(char_spr,player.x*player.speed,player.y*player.speed)
end

function is_on_beach()
    if CURRENT_MAP == 0 then
        sfx(9, 1)
    else
        sfx(-1)
    end
end

function move_character()
    if btnp(1) then
        player.x+=1
    elseif btnp(0) then
        player.x-=1
    elseif btnp(2) then
        player.y-=1
    elseif btnp(3) then
        player.y+=1
    end
end





